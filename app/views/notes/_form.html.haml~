= form_with(model: note, local: true) do |form|
  - if note.errors.any?
    #error_explanation
      %h2
        = pluralize(note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - note.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :nome
    = form.text_field :nome
  .field
    = form.label  :argument
    = form.select :argument, ['Matematica e Fisica','Informatica','Lettere Filosofia e Storia','Lingue','Giurisprudenza', 'Economia e Scienze Politiche']
  
    

  .field
    = form.label :pdf
    = form.file_field :pdf
  .field
    STUDENTE PROPRIETARIO:#{form.label  :student, current_student.name}
    \#{form.hidden_field :student_id, :value => current_student.id}
  .actions
    = form.submit
