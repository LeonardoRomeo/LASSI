= form_with(model: doc, local: true) do |form|
  - if doc.errors.any?
    #error_explanation
      %h2
        = pluralize(doc.errors.count, "error")
        prohibited this doc from being saved:
      %ul
        - doc.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label  :argument
    = form.select :argument, ['Matematica e Fisica','Informatica','Lettere Filosofia e Storia','Lingue','Giurisprudenza', 'Economia e Scienze Politiche']
  .field
    = form.label :file
    = form.text_field :file
  .field
    THIRDPART PROPRIETARIA :#{form.label  :student, current_student.email}
    \#{form.hidden_field :student_id, :value => current_student.id}
  .actions
    = form.submit
